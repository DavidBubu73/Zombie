                char nombre[1001];
                for(int i = 0; 1; i++)
                {
                    scanf("%c", &nombre[i]);
                    if(nombre[i] == '\n')
                        break;
                }

                int tamano = tam(nombre);
                /*printf("%d\n", tamano);
                for(int i = 0; i < tamano; i++)
                {
                    printf("%c", nombre[i]);
                    if(nombre[i] == '\n')
                    {
                        printf("Oye bro");
                    }
                }*/

                char direccion[1001] = "Casos\\Usuario\\";

                for(int i = 0; i < tamano; i++)
                {
                    direccion[i + 14] = nombre[i];
